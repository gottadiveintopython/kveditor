#:kivy 1.9.1
#:import KivyLexer kivy.extras.highlight.KivyLexer

<KvEditor>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30
            Button:
                text: 'File'
                size_hint_x: 1
                on_press: root.kve_choosefile()
            TextInput:
                id: ti_filepath
                multiline: False
                size_hint_x: 13
            Button:
                text: 'Load'
                size_hint_x: 2
                on_press: root.kve_load()
            Button:
                text: 'Save'
                size_hint_x: 2
                on_press: root.kve_save()
            Button:
                text: 'Preview'
                size_hint_x: 2
                on_press: root.kve_preview()
        BoxLayout:
            Splitter:
                min_size: self.parent.width * 0.05
                max_size: self.parent.width * 0.95
                sizable_from: 'right'
                StencilView:
                    id: stencil_view
                    Preview:
                        size: stencil_view.size
                        pos: stencil_view.pos
                        id: preview
            CodeInput:
                id: editor
                lexer: KivyLexer()

KvEditor:

